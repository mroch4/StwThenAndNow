<div aria-hidden="true" aria-labelledby="textModalLabel" class="modal fade" id="@Constants.ReplyModalId" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content gap-3 p-3 ">
            <div class="d-flex align-items-center justify-content-between">
                <h6>@Labels.AddReply</h6>
                <button class="btn-close" data-bs-dismiss="modal" @onclick="Reset" type="button"></button>
            </div>
            <div class="d-flex flex-column gap-3">
                <InputText @bind-Value="Reply.Name" class="form-control" maxlength="@MaxNameLength" placeholder="@Labels.ReplyAuthor" />
                <div>
                    <InputTextArea @bind-Value="Reply.Content" @oninput="OnContentInput" class="form-control" maxlength="@MaxContentLength" placeholder="@Labels.ReplyContent" rows="5" />
                    <div class="d-flex justify-content-end">
                        <code class="text-muted mt-1">@(Reply?.Content?.Length ?? 0)/@MaxContentLength</code>
                    </div>
                </div>
            </div>
            <div class="d-flex justify-content-end">
                <button class="btn btn-sm btn-dark" data-bs-dismiss="modal" disabled="@Disabled" @onclick="AddReply">@Labels.Submit</button>
            </div>
        </div>
    </div>
</div>
