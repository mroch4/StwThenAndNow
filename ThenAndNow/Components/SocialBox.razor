<div class="d-flex flex-column">
    <div class="d-flex justify-content-between align-content-center mb-3">
        <div class="d-flex flex-wrap gap-2">
            @foreach (var button in SocialButtons)
            {
                <ShareButton Type="button" Url="@DirectUrl" />
            }
        </div>
        <button class="btn btn-sm btn-dark" @onclick="ToggleReplies">@(ShowReplies? Labels.HideReplies: Labels.ShowReplies)</button>
    </div>
    <div class="d-flex flex-column">
        @if (ShowReplies)
        {
            <Loader DataLoaded="DataLoaded">
                @if (Replies.Any())
                {
                    <div class="@ReplyBoxClass" style="@ReplyBoxStyle">
                        @foreach (var reply in Replies)
                        {
                            <ReplyComponent Reply="reply" @key="reply.Id" />
                        }
                    </div>
                }
                <div class="d-flex justify-content-center">
                    <button class="btn btn-sm btn-dark" @onclick="AddReply">@(Replies.Any() ? Labels.AddReply : Labels.AddFirstReply)</button>
                </div>
            </Loader>
        }
    </div>
</div>